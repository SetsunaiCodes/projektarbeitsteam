import Layout from "../layouts/Layout.astro";

export const prerender = true;
---

<Layout>
  <div class="sortlayer">
    <div class="grid">
      <div class="item">
        <div class="item-content">
          <div class="groupbox">
            <div class="boxheader"><p>MARKIERTE SPIELE</p></div>
            <div class = "gamegallery">
                <button class="btn-g"><ion-icon name="chevron-back-outline"></ion-icon></button>
                <div class="sekiro"><div class="playbutton"><div class="playbuttonicon"></div></div></div>
                <div class="eldenring"><div class="playbutton"><div class="playbuttonicon"></div></div></div>
                <div class="darksouls"><div class="playbutton"><div class="playbuttonicon"></div></div></div>
                <button class="btn-g"><ion-icon name="chevron-forward-outline"></ion-icon></button>
            </div>
        </div>

        </div>
      </div>

      <div class="item">
        <div class="item-content">Third</div>
      </div>
      <div class="item">
        <div class="item-content">fourth</div>
      </div>
      <div class="item">
        <div class="item-content">Fifth</div>
      </div>


      <div class="item">
        <div class="item-content">
          <div class="friendbox">
            <div class="boxheader"><p>FREUNDESLISTE</p></div>
            <div class="searchbar">
              <input type="text" class="searchbarfriend" placeholder="Suche...">
              <div class="lupe"><ion-icon name="search-outline"></ion-icon></div>
            </div>

            
            <div class="friend ">
              <div class="friendheader ">
                <div class="friendavatar ">
                  <div class="avatarpb max"></div>
